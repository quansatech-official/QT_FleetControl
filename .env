# Traccar DB (read-only user!)
DB_HOST=traccar-01-database-1
DB_PORT=3306
DB_USER=traccar
DB_PASS=traccar
DB_NAME=traccar
# Optional: table prefix (Traccar default is "tc_")
DB_PREFIX=tc_

# Tank JSON Key (je nach OBD/Tracker!)
FUEL_JSON_KEY=fuel

# Activity tuning
MIN_SPEED_KMH=5
STOP_TOLERANCE_SEC=120
MIN_MOVING_SECONDS=60
MIN_STOP_SECONDS=600
DETAIL_STOP_SECONDS=120
DETAIL_GAP_SECONDS=0
DETAIL_MIN_SEGMENT_SECONDS=180
DETAIL_MIN_SEGMENT_DISTANCE_M=200
DETAIL_MIN_START_END_DISTANCE_M=150
DETAIL_MERGE_STOP_SECONDS=300
PDF_GEOCODE=false

# Alarms
FUEL_DROP_LITERS=10
FUEL_DROP_PERCENT=8
FUEL_WINDOW_MINUTES=10

# Server
PORT=3000
JWT_SECRET=change_me
JWT_EXPIRES_IN=12h
TRACCAR_BASE_URL=http://traccar:8082
TRACCAR_AUTH_MODE=api
AUTH_DISABLED=true

# Frontend
VITE_API_BASE=http://localhost:3000/api
VITE_AUTH_DISABLED=true
